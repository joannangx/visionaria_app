<div class="content_wrapper">
= render 'shared/header_tag'

- if current_user.spanish
    = render 'shared/new_tagged_post_esp'
- else
    = render 'shared/new_tagged_post'
%div{:class => "filter"}
    = form_tag tagged_posts_path, :method => :get, :id => 'categories_form' do
        -@all_categories.each do |category|
            = category
            = check_box_tag "categories[#{category}]", 1, @selected_categories.include?(category), :id => "categories_#{category}"
        
        = submit_tag 'Refresh', :id => 'categories_submit'
    
%br
- @taggedposts.each do |p|
    - if current_user.spanish
        = render 'shared/indiv_tagged_post_esp', :post => p
    - else
        = render 'shared/indiv_tagged_post', :post => p
</div>

